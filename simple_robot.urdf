<?xml version="1.0"?> 
<robot name="simple_bot"> 
 
  <!-- Base link --> 
  <link name="base_link"> 
    <visual> 
      <geometry> 
        <box size="0.4 0.4 0.2"/> 
      </geometry> 
      <material name="blue"/> 
    </visual> 
  </link> 
 
  <!-- Head link --> 
  <link name="head_link"> 
    <visual> 
      <geometry> 
        <sphere radius="0.15"/> 
      </geometry> 
      <material name="red"/> 
    </visual> 
  </link> 
 
  <!-- Joint --> 
  <joint name="base_to_head" type="continuous"> 
    <parent link="base_link"/> 
    <child link="head_link"/> 
    <origin xyz="0 0 0.25"/> 
  </joint> 
 
</robot>