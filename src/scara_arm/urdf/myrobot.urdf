<?xml version="1.0"?>
<robot name="simple_scara">

  <!-- Base link -->
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.2"/>
      </geometry>
        <origin xyz="0 0 0.1" rpy="0 0 0"/>

      <material name="gray">
        <color rgba="0.3 0.3 0.3 1.0"/>
      </material>
    </visual>
  </link>

  <!-- Link 1 -->
  <link name="link1">
    <visual>
      <geometry>
        <box size="0.25 0.05 0.02"/>
      </geometry>
      <origin xyz="0.15 0 0" rpy="0 0 0"/>
      <material name="blue">
        <color rgba="0.1 0.3 0.5 1.0"/>
      </material>
    </visual>
  </link>

  <!-- Link 2 -->
  <link name="link2">
    <visual>
      <geometry>
        <box size="0.24 0.05 0.02"/>
      </geometry>
      <origin xyz="0.1 0 0" rpy="0 0 0"/>
      <material name="green">
        <color rgba="0.2 0.5 0.1 1.0"/>
      </material>
    </visual>
  </link>

  <!-- Vertical prismatic link -->
  <link name="link3">
    <visual>
      <geometry>
        <cylinder radius="0.02" length="0.08"/>
      </geometry>
      <origin xyz="0 0 -0.05" rpy="0 0 0"/>
      <material name="red">
        <color rgba="0.5 0.1 0.1 1.0"/>
      </material>
    </visual>
  </link>

  <!-- End effector -->
  <link name="ee_link">
    <visual>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="yellow">
        <color rgba="0.7 0.7 0.1 1.0"/>
      </material>
    </visual>
  </link>

  <!-- Revolute Joint 1 (Base to Link1) -->
  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 0.21" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="5" velocity="1"/>
  </joint>

  <!-- Revolute Joint 2 (Link1 to Link2) -->
  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0.25 0 0.02" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="5" velocity="1"/>
  </joint>

  <!-- Prismatic Joint (Z lift) -->
  <joint name="joint3" type="prismatic">
    <parent link="link2"/>
    <child link="link3"/>
    <origin xyz="0.2 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 -1"/>
    <limit lower="0" upper="0.1" effort="5" velocity="0.2"/>
  </joint>

  <!-- Fixed Joint (Link3 to End Effector) -->
  <joint name="ee_fixed" type="fixed">
    <parent link="link3"/>
    <child link="ee_link"/>
    <origin xyz="0 0 -0.11" rpy="0 0 0"/>
  </joint>

</robot>
