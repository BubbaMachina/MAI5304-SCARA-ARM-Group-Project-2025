<?xml version="1.0"?>

<robot name="simple_bot">

    <!-- Base Link-->
    <link name="base_link">

        <!-- Intertial properties -->
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/> 
            <!-- Center of Mass -->
            <mass value="1.5"/> <!-- in kg -->
            <inertia ixx="0.01" ixy="0.0" ixz="0.0"
             iyy="0.015" iyz="0.0"
             izz="0.02"/>
        </inertial>

        <!-- Visual -->
        <visual>
            <geometry>
                <box size="0.4 0.4 0.2"/>
            </geometry>
            <material name="blue">
                <color rgba="0.1 0.3 0.5 1.0"/>
            </material>
        </visual>

        <!-- Collision -->
        <collision>
            <geometry>
                <box size="0.4 0.4 0.2"/>
            </geometry>
        </collision>
    </link>

    <!-- Head link -->
    <link name="head_link">
        <!-- Intertial properties -->
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/> 
            <!-- Center of Mass -->
            <mass value="1.5"/> <!-- in kg -->
            <inertia ixx="0.01" ixy="0.0" ixz="0.0"
             iyy="0.015" iyz="0.0"
             izz="0.02"/>
        </inertial>

        <!-- Visual -->
        <visual>
            <geometry>
                <sphere radius="0.15"/>
            </geometry>
            <material name="red">
                <color rgba="0.5 0.1 0.1 1.0"/>
            </material>
        </visual>

        <!-- Collision -->
        <collision>
            <geometry>
                <sphere radius="0.15"/>
            </geometry>
        </collision>
    </link>

    <!-- Joint -->
    <joint name="base_to_head" type="continuous">
        <parent link="base_link"/>
        <child link="head_link"/>
        <origin xyz="0 0 0.25"/>
    </joint>

</robot>